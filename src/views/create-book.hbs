<div class="form-container">
  <h2>Add Book to Catalog</h2>
  <form action="/api/books" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="title" id="title" name="title" required />
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      <input type="author" id="author" name="author" required />
    </div>
    <div class="form-group">
      <label for="genre">Genre</label>
      <input type="genre" id="genre" name="genre" required />
    </div>
    <button type="submit" class="btn">Add New Book</button>
  </form>
</div>